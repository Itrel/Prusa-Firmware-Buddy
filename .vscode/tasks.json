{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bootstrap",
            "type": "shell",
            "command": "py ${workspaceFolder}/utils/bootstrap.py",
            "windows": {
                "command": "py ${workspaceFolder}\\utils\\bootstrap.py"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Prepare Simulator State Directory",
            "type": "shell",
            "command": "py ${workspaceFolder}/.vscode/prepare_simulator_dir.py ${workspaceFolder}/build-vscode-buddy ${workspaceFolder}/build-vscode-buddy/simulator",
            "windows": {
                "command": "py ${workspaceFolder}\\.vscode\\prepare_simulator_dir.py ${workspaceFolder}\\build-vscode-buddy ${workspaceFolder}\\build-vscode-buddy\\simulator"
            }
        }
    ]
}
